{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "es2015",
            "es2016",
            "dom",
            "dom.iterable"
          ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.js",
        "**/*.spec.ts"
    ]
}